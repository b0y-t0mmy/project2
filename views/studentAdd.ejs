  <form action='/employee/studentAdd' method='POST'>

      <h1>Add New Student</h1>
      </br>
      </br>

      <input type="text" class="form-control" name= "username" placeholder="Student's Name">
      </br>
      
      <input type="text" class="form-control" name ="studentsId" placeholder="Student's ID">
      
      
      </br>
      <input type="text" class="form-control" name ="age" placeholder="Student's Age">
