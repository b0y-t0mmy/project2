<html>
<head>
    <title>Change Password</title>
    <link rel="stylesheet"
    href="/libs/bootstrap.min.css">
  <script type="text/javascript"
    src="/libs/bootstrap.min.js"></script>
    
        <link rel="stylesheet" href="../libs/bootstrap.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href = "/password/change">Change Password</a>
            </li>
            <li class="nav-item">
              <button class="btn btn-light"><a class="nav-link" href="/logout">Log Out</a></button>
            </li>
          </ul>
        </div>
      </nav>

    <h1 class="text-center mb-3 mt- 5">Change Password</h1>
    <div class="Container w-25">

        <%- include("partials/messages") -%>
        <form action="/password/change" method="POST">
            <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="New Password">
            </div>
            <div class="form-group">
                <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm Password">
            </div>
            <button type="submit" class="btn btn-success btn-block">Change Password</button>
        </form>
    </div>
</body>

</html>