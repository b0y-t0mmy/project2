<%- include('partials/header') -%>
        <form action = "/employee" method = "GET">
            
            <div class = "container justify-content-center">

              <h1>Search Employee</h1>
            </br>
            </br>
            
              <input type="text" class="form-control" name="name" placeholder="Employee Name">
            </br>
                <button type = "submit" class = "btn btn-success">Search</button>
            
          </form>
        <% if(employee) { %>
          <h4 class = "heading text-danger">Search Results :</h4>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Name</th>
                <th>Designation</th>
                <th>Salary</th>
                <th>Class</th>
                <th>Email</th>
            </tr>
            </thead>

            <tbody>
              <tr>
                <td><%= employee.user.username %></td>
                <td><%= employee.designation %></td>
                <td>Ghc<%= employee.salary %></td>
                <td><%= employee.class %></td>
                <td><%= employee.user.email %></td>
            </tr>
            </tbody>
            </table>
          <% }else if(employee != '') { %>

            <div class="alert alert-danger mt-4"> Employee with that name does not exist</div>

            <% } %>
          </div>

    <%- include('partials/footer') -%>