<%- include('partials/headerstu') -%>
<form action="/student" method="GET">

  <div class="container justify-content-center">

    <h1>Search Student</h1>
    </br>
    </br>

    <input type="text" class="form-control" name="name" placeholder="Student's Name">
    </br>
    <button type="submit" class="btn btn-success">Search</button>

</form>
<% if(student) { %>
<h4 class="heading text-danger">Search Results :</h4>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Student ID</th>
      <th>Age</th>
      <th>Class</th>
      <th>Gender</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.studentId %></td>
      <td><%= student.age %></td>
      <td><%= student.class %></td>
      <td><%= student.gender %></td>
    </tr>
  </tbody>
</table>
<% }else if(student != '') { %>

<div class="alert alert-danger mt-4"> Student with that name does not exist</div>

<% } %>
</div>

<%- include('partials/footer') -%>